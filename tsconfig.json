{
  "compilerOptions": {
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "strictNullChecks": true,
    "strict": true,
    "declaration": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "module": "commonjs",
    "target": "es5",
    "outDir": "./lib",
    "lib": [
      "es2015",
      "scripthost",
      "dom"
    ]
  },
  "include": [
    "./src/**/*.ts",
    "./__test__/**/*.ts"
  ]
}
